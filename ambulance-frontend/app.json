{
  "expo": {
    "name": "MediSwift",
    "slug": "mediswift",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mediswift.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone for voice search functionality.",
        "NSLocationWhenInUseUsageDescription": "This app uses location to find nearby hospitals and track ambulance.",
        "NSSpeechRecognitionUsageDescription": "Allow $(PRODUCT_NAME) to use speech recognition."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.mediswift.app",
      "versionCode": 1,
      "permissions": [
        "RECORD_AUDIO",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-maps",
      "expo-speech-recognition",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow MediSwift to use your location to find nearby hospitals and track ambulance."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "0dda7861-7824-4187-a545-7f0fdd514a14"
      }
    }
  }
}
